  </div>
  <div class="field">
    <%= f.label :note %><br />
    <%= f.text_area :note %>
  </div>
  <div class="field">
    <%= f.label :type %><br />
    <%= f.number_field :type %>
  </div>
  <div class="field">
    <%= f.label :time %><br />
    <%= f.number_field :time %>
  </div>
  <div class="field">
    <%= f.label :challenge %><br />
    <%= select :task, :challenge, @challenges %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
